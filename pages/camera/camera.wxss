/* camera.wxss */
page {
  width: 100%;
  height: 100%;
}

.camera-container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* 权限提示样式 */
.permission-tip {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
  padding: 30rpx;
  box-sizing: border-box;
}

.tip-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #ffcc00;
  color: white;
  font-size: 70rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.auth-btn {
  background-color: #1aad19;
  color: white;
  border-radius: 10rpx;
  width: 60%;
  margin-bottom: 30rpx;
}

.back-link {
  font-size: 28rpx;
  color: #576b95;
  text-decoration: underline;
}

.camera {
  width: 100%;
  flex: 1;
}

.controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
}

.btn {
  width: 120rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.capture-area {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.capture-btn {
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.capture-btn.disabled {
  opacity: 0.5;
}

.inner-circle {
  width: 90rpx;
  height: 90rpx;
  background-color: white;
  border-radius: 50%;
}

.guide-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 200rpx;
  box-sizing: border-box;
  pointer-events: none;
}

.corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-color: #1aad19;
  border-style: solid;
  border-width: 0;
}

.top-left {
  top: 0;
  left: 0;
  border-left-width: 4rpx;
  border-top-width: 4rpx;
}

.top-right {
  top: 0;
  right: 0;
  border-right-width: 4rpx;
  border-top-width: 4rpx;
}

.bottom-left {
  bottom: 0;
  left: 0;
  border-left-width: 4rpx;
  border-bottom-width: 4rpx;
}

.bottom-right {
  bottom: 0;
  right: 0;
  border-right-width: 4rpx;
  border-bottom-width: 4rpx;
}

.guide-text {
  position: absolute;
  bottom: -60rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: white;
  font-size: 28rpx;
  text-shadow: 0 0 4rpx rgba(0, 0, 0, 0.5);
} 