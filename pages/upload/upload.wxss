/* upload.wxss */
page {
  background-color: #f8f8f8;
  height: 100%;
}

.upload-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
}

.back-icon {
  margin-right: 6rpx;
  font-size: 32rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
}

.placeholder {
  width: 80rpx;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
}

.image-container {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #ddd;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.clear-btn {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
}

.tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.recognize-btn {
  background-color: #1aad19;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  margin-top: auto;
}

.recognize-btn.disabled {
  background-color: #74c56d;
  color: rgba(255, 255, 255, 0.8);
} 